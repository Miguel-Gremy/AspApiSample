@model AspApiSample.Web.Models.Admin.AddRoleModel
@{
    ViewData["Title"] = "Add role";
}

@Html.AntiForgeryToken()
@using (Html.BeginForm("AddRole", "Admin", FormMethod.Post))
{
    <div class="text-center login-div">
        <main class="form-signin">

            <h1 class="h3 mb-3 fw-normal">Add role</h1>

            @if (Model.Errors is not null)
            {
                @foreach (var error in Model.Errors)
                {
                    <p class="text text-danger">@error</p>
                }
            }


            <div class="form-floating mb-2">
                <input type="text" id="RoleName" name="RoleName" value="@Model.RoleName"
                       class="form-control mb-2" placeholder="Role name" required />
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
        </main>
    </div>
}