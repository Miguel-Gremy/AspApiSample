@model AspApiSample.Web.Models.Admin.UsersModel
@{
    ViewData["Title"] = "Users";
}

<partial name="_ErrorsMessagesDisplay" />

<div class="card p-3 m-2">
    <div class="table-responsive">
        <table class="table table-striped table-hover text-center">
            <caption>Users</caption>
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Email</th>
                    <th scope="col">User name</th>
                    <th scope="col">Is email confirmed</th>
                    <th scope="col">Phone number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <th scope="row">@user.Id</th>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td>@Html.CheckBoxFor(m => user.EmailConfirmed.Value, new { disabled = "disabled" })</td>
                        <td>@user.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<a class="btn btn-primary m-2" asp-area="" asp-controller="Admin" asp-action="AddUser">Add user</a>