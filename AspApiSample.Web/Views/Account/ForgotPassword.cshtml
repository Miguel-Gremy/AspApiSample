@model AspApiSample.Web.Models.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<h1>ForgotPassword</h1>

<div class="row">
    <div class="col-md-4">
        @Html.AntiForgeryToken()
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
        {
            <div class="text-center login-div">
                <main class="form-signin">

                    @if (Model.Errors is not null)
                    {
                        @foreach (var error in Model.Errors)
                        {
                            <p class="text text-danger">@error</p>
                        }
                    }

                    <div class="form-floating mb-2">
                        <input type="email" id="email" name="email" value="@Model.Email"
                               class="form-control" placeholder="name@example.com" required/>
                    </div>
                    <input type="hidden" name="_target_path" value="/home"/>

                    <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
                </main>
            </div>
        }
    </div>
</div>