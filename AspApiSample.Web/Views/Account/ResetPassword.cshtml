@model AspApiSample.Web.Models.Account.ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
}

<h1>ResetPassword</h1>

<div class="row">
    <div class="col-md-4">
        @Html.AntiForgeryToken()
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            <div class="text-center login-div">
                <main class="form-signin">

                    @if (Model.Errors is not null)
                    {
                        @foreach (var error in Model.Errors)
                        {
                            <p class="text text-danger">@error</p>
                        }
                    }

                    <input type="email" id="email" name="email" value="@Model.Email"
                           class="form-control mb-2" required hidden/>
                    <input id="token" name="token" value="@Model.Token"
                           class="form-control mb-2" required hidden/>

                    <div class="form-floating mb-2">
                        <input type="password" id="Password" name="Password" value="@Model.Password"
                               class="form-control mb-2" placeholder="Password" required/>
                        <input type="password" id="ConfirmPassword" name="ConfirmPassword" value="@Model.ConfirmPassword"
                               class="form-control" placeholder="Confirm password" required/>
                    </div>
                    <input type="hidden" name="_target_path" value="/home"/>

                    <button type="submit" class="w-100 btn btn-lg btn-primary">Submit</button>
                </main>
            </div>
        }
    </div>
</div>